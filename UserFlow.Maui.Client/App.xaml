<?xml version="1.0" encoding="UTF-8" ?>
<Application
    x:Class="UserFlow.Maui.Client.App"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:UserFlow.Maui.Client.Converter"
    xmlns:local="clr-namespace:UserFlow.Maui.Client">

    <!--  ðŸŽ¨ Global application resources  -->
    <Application.Resources>
        <ResourceDictionary>

            <!--  ðŸ“š Merge color and style dictionaries  -->
            <ResourceDictionary.MergedDictionaries>
                <!--  ðŸŒˆ Colors for dark/light themes  -->
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <!--  ðŸ’… Typography, spacing, visual styles  -->
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!--  ðŸ”„ Converters  -->
            <conv:EmptyOrNullToDashConverter x:Key="EmptyOrNullToDashConverter" />

        </ResourceDictionary>
    </Application.Resources>
</Application>

