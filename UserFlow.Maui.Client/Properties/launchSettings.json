{
  "profiles": {
    "UserFlow.API": {
      "commandName": "Project", // 🚀 Startet die API als Konsolenanwendung
      "dotnetRunMessages": true, // 📣 Zeigt ausführliche Run-Messages von dotnet
      "applicationUrl": "http://localhost:61681;https://localhost:71681", // 🌐 URLs für HTTP und HTTPS Endpunkte
      "launchBrowser": true, // 🌍 Öffnet Browser automatisch bei Start
      "environmentVariables": {
        "ASPNETCORE_ENVIRONMENT": "Development" // 🛠️ Setzt Umgebungsvariable für Konfiguration
      }
    }
  }
}

